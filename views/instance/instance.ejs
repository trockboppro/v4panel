    crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
<style>
    canvas {
        position: absolute;
        left: 0;
        top: 0;
        width: 100% !important;
        height: 100% !important;
    }

    .xterm-viewport {
        overflow-y: hidden !important;
        border-radius: 0 0 0.75rem 0.75rem;
    }

    .xterm-screen {
        padding: 0.5rem;
    }

    .copy-btn {
        transition: all 0.2s ease;
        cursor: pointer;
    }
    .copy-btn:hover {
        background-color: rgba(255, 255, 255, 0.1);
    }
    .copy-btn:active {
        transform: scale(0.95);
    }

    .progress-container {
        width: 100%;
        height: 8px;
        background-color: rgba(255, 255, 255, 0.05);
        border-radius: 4px;
        overflow: hidden;
        margin-top: 8px;
    }

    .progress-bar {
        height: 100%;
        border-radius: 4px;
        transition: width 0.3s ease;
    }

    .progress-text {
        font-size: 0.875rem;
        margin-top: 4px;
        color: rgba(255, 255, 255, 0.7);
    }

    .usage-details {
        display: flex;
        justify-content: space-between;
        margin-top: 2px;
        font-size: 0.75rem;
        color: rgba(255, 255, 255, 0.5);
    }
    
    .server-address-card {
        background: linear-gradient(135deg, rgba(255,255,255,0.03) 0%, rgba(255,255,255,0.01) 100%);
        border: 1px solid rgba(255,255,255,0.05);
        backdrop-filter: blur(10px);
        transition: all 0.3s ease;
    }
    
    .server-address-card:hover {
        border-color: rgba(255,255,255,0.1);
        transform: translateY(-2px);
    }
    
    .address-display {
        font-family: 'Menlo', 'Monaco', 'Courier New', monospace;
        letter-spacing: 0.5px;
        background: rgba(0,0,0,0.2);
        padding: 8px 12px;
        border-radius: 6px;
        display: inline-flex;
        align-items: center;
        word-break: break-all;
    }
    
    .copy-indicator {
        opacity: 0;
        transition: all 0.3s ease;
        white-space: nowrap;
    }
    
    .copy-indicator.active {
        opacity: 1;
    }
    
    .tooltip {
        position: relative;
    }
    
    .tooltip-text {
        visibility: hidden;
        width: 120px;
        background-color: rgba(0,0,0,0.8);
        color: #fff;
        text-align: center;
        border-radius: 6px;
        padding: 5px;
        position: absolute;
        z-index: 1;
        bottom: 125%;
        left: 50%;
        transform: translateX(-50%);
        opacity: 0;
        transition: opacity 0.3s;
        font-size: 12px;
    }
    
    .tooltip:hover .tooltip-text {
        visibility: visible;
        opacity: 1;
    }
    
    /* Improved terminal styling */
    #terminal {
        min-height: 300px;
        max-height: 500px;
        overflow: hidden;
        background-color: rgba(0, 0, 0, 0.3);
        border-radius: 0 0 0.75rem 0.75rem;
    }
    
    /* Better input field styling */
    #input {
        background-color: rgba(0, 0, 0, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: all 0.3s ease;
        border-radius: 0.75rem;
        border-top-left-radius: 0;
        border-top-right-radius: 0;
        border-top: none;
    }
    
    #input:focus {
        outline: none;
        border-color: rgba(255, 255, 255, 0.3);
        box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.2);
    }
    
    /* Power buttons container */
    .power-buttons {
        display: flex;
        gap: 0.5rem;
        margin-top: 1rem;
    }

    /* Improved EULA modal */
    .eula-modal {
        background: rgba(15, 23, 42, 0.95);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        max-height: 80vh;
        overflow-y: auto;
    }

    .eula-content {
        max-height: 60vh;
        overflow-y: auto;
        padding-right: 1rem;
    }

    .eula-content::-webkit-scrollbar {
        width: 6px;
    }

    .eula-content::-webkit-scrollbar-track {
        background: rgba(255, 255, 255, 0.05);
    }

    .eula-content::-webkit-scrollbar-thumb {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 3px;
    }

    /* Terminal container improvements */
    .terminal-container {
        border-radius: 0.75rem;
        overflow: hidden;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    }

    .terminal-header {
        background: rgba(0, 0, 0, 0.3);
        padding: 0.75rem 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        display: flex;
        align-items: center;
    }

    .terminal-title {
        font-size: 0.875rem;
        font-weight: 500;
        color: rgba(255, 255, 255, 0.8);
    }

    /* Status indicator */
    .status-indicator {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        margin-right: 8px;
        display: inline-block;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .power-buttons {
            flex-direction: column;
        }
        
        .server-address-card {
            margin-top: 1rem;
        }
        
        #terminal {
            min-height: 250px;
            max-height: 350px;
        }
    }
</style>
<main class="overflow-hidden" id="content">
    <% if (Array.isArray(files) && files.length > 0 && !files.some(file => file.name === 'eula.txt')) { %>
        <% if (instance.imageData.features && instance.imageData.features.includes('eula')) { %>
            <div class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-70 backdrop-blur-sm z-50 p-4">
                <div class="eula-modal max-w-2xl w-full rounded-xl shadow-xl p-6">
                    <div class="flex items-center justify-between mb-4">
                        <h2 class="text-xl font-bold text-white">Minecraft End User License Agreement (EULA)</h2>
                    </div>
                    
                    <div class="eula-content text-sm text-gray-300 mb-6">
                        <p class="mb-4">Before you can start your Minecraft server, you must agree to Mojang's End User License Agreement (EULA).</p>
                        
                        <h3 class="font-semibold text-white mb-2">Key Points:</h3>
                        <ul class="list-disc pl-5 mb-4 space-y-1">
                            <li>You must be at least 13 years old to agree to the EULA</li>
                            <li>You agree not to distribute Minecraft or server software</li>
                            <li>You agree not to use mods that alter gameplay in unauthorized ways</li>
                            <li>Commercial use is restricted without permission</li>
                        </ul>
                        
                        <p class="mb-4">By clicking "I Agree", you acknowledge that you have read, understood, and agree to be bound by the <a href="https://account.mojang.com/documents/minecraft_eula" target="_blank" class="text-blue-400 hover:underline">Minecraft EULA</a> and <a href="https://www.minecraft.net/en-us/eula" target="_blank" class="text-blue-400 hover:underline">Commercial Usage Guidelines</a>.</p>
                        
                        <div class="bg-gray-800/50 p-4 rounded-lg border border-gray-700">
                            <p class="font-mono text-xs text-gray-300">#By changing the setting below to TRUE you are indicating your agreement to our EULA (https://account.mojang.com/documents/minecraft_eula).</p>
                            <p class="font-mono text-xs text-gray-300">eula=true</p>
                        </div>
                    </div>
                    
                    <div class="flex justify-between items-center">
                        <a href="https://account.mojang.com/documents/minecraft_eula" target="_blank" class="text-sm text-blue-400 hover:underline flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>
                            Read Full EULA
                        </a>
                        
                        <div class="space-x-3">
                            <button onclick="window.location.reload()" class="px-4 py-2 text-sm font-medium text-gray-300 hover:text-white transition">
                                Cancel
                            </button>
                            <button 
                                onclick="axios.post('/instance/<%= req.params.id %>/imagefeatures/eula')
                                    .then(response => {
                                        if (response.status === 200) {
                                            location.reload();
                                        }
                                    })
                                    .catch(error => {
                                        console.error('Error accepting EULA:', error);
                                        alert('Failed to accept EULA. Please try again.');
                                    });" 
                                class="px-4 py-2 bg-green-600 text-sm font-medium text-white rounded-md hover:bg-green-700 transition focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                                I Agree to EULA
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    <% } %>
    
    <div class="bg-transparent">
        <div class="sm:flex sm:items-center px-8">
            <div class="sm:flex-auto">
            </div>
