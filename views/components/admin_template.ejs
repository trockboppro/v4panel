    <script>
        // Initialize Alpine.js data and handle loading state
        document.addEventListener('alpine:init', () => {
            Alpine.data('app', () => ({
                loading: true,
                currentPath: window.location.pathname,
                init() {
                    // Performance optimization - mark elements that will change
                    const perfElements = document.querySelectorAll('.nav-link, .sidebar-transition, .animated-underline');
                    perfElements.forEach(el => {
                        el.style.willChange = 'transform, opacity, background, color';
                    });

                    // Simulate loading completion
                    setTimeout(() => {
                        this.loading = false;

                        // Remove will-change after animations complete
                        setTimeout(() => {
                            perfElements.forEach(el => {
                                el.style.willChange = '';
                            });
                        }, 300);
                    }, 500);

                    // Highlight current page in navigation
                    const currentPath = this.currentPath;
                    const navLinks = document.querySelectorAll('.nav-link');
                    navLinks.forEach(link => {
                        if (link.getAttribute('href') === currentPath) {
                            link.classList.add('active');
                        }
                    });

                    // Handle potential errors
                    window.addEventListener('error', (e) => {
                        console.error('Error occurred:', e.error);
                        this.loading = false;
                    });

                    // Ensure loading is set to false when page fully loads
                    window.addEventListener('load', () => {
                        this.loading = false;
                    });

                    // Close sidebar when clicking a nav link on mobile
                    const navLinksMobile = document.querySelectorAll('.nav-link');
                    navLinksMobile.forEach(link => {
                        link.addEventListener('click', () => {
                            if (window.innerWidth < 768) {
                                this.sidebarOpen = false;
                            }
                        });
                    });

                    // Handle viewport height on mobile
                    this.setViewportHeight();
                    window.addEventListener('resize', this.setViewportHeight.bind(this));
                },

                setViewportHeight() {
                    // First we get the viewport height and we multiple it by 1% to get a value for a vh unit
                    let vh = window.innerHeight * 0.01;
                    // Then we set the value in the --vh custom property to the root of the document
                    document.documentElement.style.setProperty('--vh', `${vh}px`);
                }
            }));
        });

        // Fallback for browsers without Alpine.js support
        if (typeof Alpine === 'undefined') {
            setTimeout(() => {
                const loadingElements = document.querySelectorAll('.loading-bar, .spinner');
                loadingElements.forEach(el => el.style.display = 'none');

                // Highlight current page in navigation
                const currentPath = window.location.pathname;
                const navLinks = document.querySelectorAll('.nav-link');
                navLinks.forEach(link => {
                    if (link.getAttribute('href') === currentPath) {
                        link.classList.add('active');
                    }
                });
            }, 500);
        }

        // Improved error handling
        window.addEventListener('unhandledrejection', (event) => {
            console.error('Unhandled rejection:', event.reason);
            const loadingBar = document.querySelector('.loading-bar');
            const spinner = document.querySelector('.spinner');
            if (loadingBar) loadingBar.style.display = 'none';
            if (spinner) spinner.style.display = 'none';
        });

        // Optimize animation performance
        document.addEventListener('DOMContentLoaded', () => {
            // Use requestAnimationFrame for smoother animations
            const animate = () => {
                // Animation logic here if needed
                requestAnimationFrame(animate);
            };
            requestAnimationFrame(animate);

            // Prevent double-tap zoom on mobile
            let lastTouchEnd = 0;
            document.addEventListener('touchend', function (event) {
                const now = (new Date()).getTime();
                if (now - lastTouchEnd <= 300) {
                    event.preventDefault();
                }
                lastTouchEnd = now;
            }, false);
        });

        // Fix for iOS viewport units
        function handleViewportHeight() {
            let vh = window.innerHeight * 0.01;
            document.documentElement.style.setProperty('--vh', `${vh}px`);
        }

        window.addEventListener('resize', handleViewportHeight);
        handleViewportHeight();
    </script>
